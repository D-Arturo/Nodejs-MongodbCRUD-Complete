<div class="row">
    {{#each notes}} <!-- llamamos a cada elemento de la colección-->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
                    </h4> <!-- No hace falta indicarle notes.title porque estamos 
                dentro del each que va a recorrer cada nota-->
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <!--Hacemos una consulta(?) al metodo override que definimos como middleware para poder
                transformar la peticion POST en DELETE.
                DOCUMENTACION: http://expressjs.com/en/resources/middleware/method-override.html
                    Brujeria de una query ? y el metodo override para transformar el metodo post en delete-->
                <!--  <input type="hidden" name="_method" value="DELETE"> -->
                <!-- este input se supone que es para que la brujeria del ?_method=DELETE funcione, 
                pero funciona sin ello según la documentación -->
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>